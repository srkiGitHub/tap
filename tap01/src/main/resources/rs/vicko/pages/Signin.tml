<html t:type="layout" title="Loging page" t:sidebarTitle="Loging page sidebar"
	xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd" xmlns:p="tapestry:parameter">
	<body>
		<div>
			<form t:type="Form" t:id="loginform">
				<table>
					<tr>
						<td>Username:</td>
						<td>
							<t:textfield t:id="username" validate="required"
								size="40" tabindex="1" />
						</td>
					</tr>
					<tr>
						<td>Password:</td>
						<td>
							<t:passwordfield t:id="password" validate="required"
								size="40" tabindex="2" />
						</td>
					</tr>
					<tr>
						<td></td>
						<td>
							<input type="submit" value="Login" />
						</td>
					</tr>
				</table>
			</form>
		</div>
	</body>
</html>